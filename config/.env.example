# AWS Credentials
# Get these from: docs/AWS_SETUP.md
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=your_account_id

# LLM API Keys
# Gemini (FREE tier): https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# OpenAI (Fallback, paid): https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key_here

# Environment
ENVIRONMENT=development  # development, staging, production

# Frontend (Next.js)
NEXT_PUBLIC_API_GATEWAY_URL=https://your-api-id.execute-api.ap-south-1.amazonaws.com/prod

# Local Development (optional)
USE_LOCALSTACK=false
LOCALSTACK_ENDPOINT=http://localhost:4566
MOCK_LLM=false

# Database (DynamoDB table names - should match config.yaml)
DYNAMODB_TABLE_STORES=Stores
DYNAMODB_TABLE_UPLOADS=Uploads
DYNAMODB_TABLE_EXTRACTED_DATA=ExtractedData

# S3 Bucket
S3_BUCKET_NAME=msme-retail-intelligence-{AWS_ACCOUNT_ID}

# Lambda Settings
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=1024

# Logging
LOG_LEVEL=INFO
